{
  "name": "lsp-sample",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "publisher": "vscode-samples",
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:miniscript"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {}
    },
    "languages": [
      {
        "id": "miniscript",
        "aliases": [
          "MiniScript",
          "miniscript"
        ],
        "extensions": [
          ".ms"
        ],
        "icon": {
          "light": "./icons/file-icon-lightmode.png",
          "dark": "./icons/file-icon-darkmode.png"
        },
        "configuration": "./miniscriptLanguageConfig.json"
      }
    ]
  }
}