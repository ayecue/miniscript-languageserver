{
  "name": "miniscript-languageserver",
  "version": "1.3.4",
  "description": "Language server for MiniScript",
  "main": "./index.js",
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "npm run build:ts && npm run build:node",
    "build:ts": "tsc -p ./",
    "build:node": "node build-node.cjs",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint --fix ./src/**/*.ts",
    "clean": "rm -rf dist",
    "test": "jest ./tests",
    "watch": "tsc -watch -p ./"
  },
  "bin": {
    "miniscript-languageserver": "./bin/miniscript-languageserver.js"
  },
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayecue/miniscript-languageserver.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ayecue/miniscript-languageserver/issues"
  },
  "homepage": "https://github.com/ayecue/miniscript-languageserver#readme",
  "keywords": [
    "greybel",
    "miniscript",
    "lexer",
    "parser",
    "languageserver"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/plugin-transform-runtime": "^7.16.8",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.18.6",
    "@types/color-convert": "^2.0.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^12.12.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/vscode": "^1.63.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "esbuild": "0.21.0",
    "esbuild-plugin-globals": "0.2.0",
    "esbuild-plugin-polyfill-node": "0.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "greybel-core": "~2.1.1",
    "miniscript-meta": "~1.2.3",
    "greybel-transpiler": "~3.2.2",
    "miniscript-type-analyzer": "~0.9.0",
    "miniscript-languageserver-core": "^1.1.2"
  }
}